<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gredent"
    android:orientation="vertical"
    tools:context=".Login">

    <RelativeLayout
        android:layout_marginHorizontal="@dimen/_25ssp"
        android:layout_marginTop="@dimen/_30ssp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_marginRight="@dimen/_12ssp"
            android:layout_toLeftOf="@+id/crown"
            android:background="@color/white"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>

        <ImageView
            android:id="@+id/crown"
            android:layout_width="@dimen/_50ssp"
            android:layout_height="@dimen/_50ssp"
            android:layout_centerInParent="true"
            android:src="@drawable/crown" />
        <View
            android:layout_marginLeft="@dimen/_12ssp"
            android:layout_toRightOf="@+id/crown"
            android:background="@color/white"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>


    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/_12ssp"
        android:fontFamily="@font/emotion_engine"
        android:textSize="@dimen/_40ssp"
        android:textColor="#116580"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text="World\nJumble"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="@dimen/_30ssp"
         android:layout_marginHorizontal="@dimen/_30ssp"
        android:text="Word"
        android:paddingHorizontal="@dimen/_20ssp"
        android:paddingVertical="2dp"
        android:textSize="@dimen/_12ssp"
        android:backgroundTint="#FFC107"
        android:textColor="@color/black2"
        android:background="@drawable/yellow_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/word"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_28ssp"
        android:layout_marginHorizontal="@dimen/_15ssp"
        android:background="@drawable/edit_text"
        android:paddingLeft="@dimen/_12ssp" />

    <TextView
        android:layout_marginTop="@dimen/_20ssp"
        android:layout_marginHorizontal="@dimen/_30ssp"
        android:text="Clue"
        android:paddingHorizontal="@dimen/_20ssp"
        android:paddingVertical="2dp"
        android:textSize="@dimen/_12ssp"
        android:backgroundTint="#FFC107"
        android:textColor="@color/black2"
        android:background="@drawable/yellow_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/clue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_28ssp"
        android:layout_marginHorizontal="@dimen/_15ssp"
        android:background="@drawable/edit_text"
        android:paddingLeft="@dimen/_12ssp" />


    <LinearLayout
        android:id="@+id/btnStart"
        android:layout_marginTop="@dimen/_50ssp"
        android:layout_gravity="center"
        android:background="@drawable/btn_shape_round"
        android:layout_width="wrap_content"
        android:padding="@dimen/_5ssp"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/emotion_engine"
            android:textSize="@dimen/_18ssp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Start"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginLeft="@dimen/_12ssp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/ic_arrow"
            android:layout_width="@dimen/_34ssp"
            android:layout_height="@dimen/_25ssp"/>



    </LinearLayout>


</LinearLayout>