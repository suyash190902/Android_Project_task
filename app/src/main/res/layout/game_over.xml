<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_marginHorizontal="@dimen/_30ssp"
        android:layout_marginTop="@dimen/_80ssp"
        android:background="@drawable/round_more"
        android:backgroundTint="#DAD607"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/_25ssp"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_gravity="center"
                android:layout_weight="3"
                android:layout_marginRight="@dimen/_6ssp"
                android:layout_toLeftOf="@+id/crown"
                android:background="@color/black"
                android:layout_centerInParent="true"
                android:layout_width="0dp"
                android:layout_height="3dp"/>

            <ImageView
                android:layout_weight="1"
                android:id="@+id/crown"
                android:layout_width="@dimen/_39ssp"
                android:layout_height="@dimen/_39ssp"
                android:layout_centerInParent="true"
                android:src="@drawable/crown"
                app:tint="@color/black" />
            <View
                android:layout_weight="3"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_6ssp"
                android:layout_toRightOf="@+id/crown"
                android:background="@color/black"
                android:layout_centerInParent="true"
                android:layout_width="0dp"
                android:layout_height="3dp"/>


        </LinearLayout>
        <TextView
            android:gravity="center"
            android:layout_marginTop="@dimen/_6ssp"
            android:text="Game Over"
            android:textSize="@dimen/_24ssp"
            android:textColor="#000000"
            android:fontFamily="@font/emotion_engine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:layout_marginTop="@dimen/_6ssp"
            android:text="Score 50 points"
            android:textSize="@dimen/_24ssp"
            android:id="@+id/score"
            android:textColor="#000000"
            android:fontFamily="@font/emotion_engine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginBottom="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginHorizontal="@dimen/_20ssp"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content">


            <Button
                android:layout_marginLeft="@dimen/_6ssp"
                android:background="@drawable/btn_shape_round"
                android:layout_weight="1"
                android:id="@+id/btnHome"
                android:layout_width="0dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:text="Home"

                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/PlayAgain"
                android:layout_marginLeft="@dimen/_6ssp"
                android:background="@drawable/btn_shape_round"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:text="Play Again"

                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>