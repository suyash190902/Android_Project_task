<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gredent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_marginTop="@dimen/_20ssp"
        android:layout_marginLeft="@dimen/_23ssp"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/heartFirst"
                android:src="@drawable/like"
                android:layout_width="@dimen/_23ssp"
                android:layout_height="@dimen/_23ssp"/>
            <ImageView
                android:id="@+id/heartSecond"

                android:layout_marginLeft="@dimen/_6ssp"
                android:src="@drawable/like"
                android:layout_width="@dimen/_23ssp"
                android:layout_height="@dimen/_23ssp"/>
            <ImageView
                android:id="@+id/heartThird"

                android:layout_marginLeft="@dimen/_6ssp"
                android:src="@drawable/like"
                android:layout_width="@dimen/_23ssp"
                android:layout_height="@dimen/_23ssp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/btnInfoImage"
            android:layout_width="@dimen/_23ssp"
            android:layout_height="@dimen/_23ssp"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:layout_marginLeft="@dimen/_6ssp"
            android:layout_marginRight="@dimen/_12ssp"
            android:layout_weight="2"
            android:src="@drawable/info" />


    </RelativeLayout>



    <LinearLayout
        android:background="@drawable/gredent_shape"
        android:layout_marginTop="@dimen/_40ssp"
        android:layout_marginHorizontal="@dimen/_30ssp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="@dimen/_40ssp">

        <EditText
            android:layout_weight="1"
            android:id="@+id/edit_1"
            android:layout_width="0dp"
            android:backgroundTint="@color/white"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:focusable="false"
            android:textIsSelectable="false" />


        <EditText
            android:layout_weight="1"
            android:id="@+id/edit_2"
            android:enabled="false"
            android:focusable="false"
            android:textIsSelectable="false"
            android:layout_width="0dp"
            android:backgroundTint="@color/white"
            android:layout_height="wrap_content"
            />
        <EditText
            android:layout_weight="1"
            android:id="@+id/edit_3"
            android:enabled="false"
            android:focusable="false"
            android:textIsSelectable="false"
            android:layout_width="0dp"
            android:backgroundTint="@color/white"
            android:layout_height="wrap_content"
            />
        <EditText
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/edit_4"
            android:enabled="false"
            android:focusable="false"
            android:textIsSelectable="false"
            android:backgroundTint="@color/white"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/edit_5"
            android:enabled="false"
            android:focusable="false"
            android:textIsSelectable="false"
            android:backgroundTint="@color/white"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/_30ssp"
        android:layout_marginHorizontal="@dimen/_20ssp"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="@dimen/_30ssp"
        android:layout_marginHorizontal="@dimen/_20ssp"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="wrap_content">


        <Button
            android:layout_marginLeft="@dimen/_6ssp"
            android:background="@drawable/btn_shape_round"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="Reset"
            android:id="@+id/Reset"

            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/check"
            android:layout_marginLeft="@dimen/_6ssp"
            android:background="@drawable/btn_shape_round"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="Check"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>